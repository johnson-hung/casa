<p>
  <%= flash[:alert] if flash[:alert] %>
  <%= link_to 'Home', root_path %>
</p>

<p align="right">
  <%= link_to 'Post an announcement', new_movie_path, :class => 'btn btn-primary pull-right' %>
  <%= link_to 'Login', new_movie_path, :class => 'btn btn-primary pull-right' %>
  <%= link_to 'Signup', new_movie_path, :class => 'btn btn-primary pull-right' %>
</p>

<h2>Announcement</h2>

<%= form_tag movies_path, :method => :get, :id => 'ratings_form' do %>
  <%= hidden_field_tag "title_sort", true if @title_header %>
  <%= hidden_field_tag ":release_date_sort", true if @date_header %>
<% end %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th class="<%= @title_header %>">
        <%= link_to 'Title', movies_path(:sort => 'title', :ratings => @selected_ratings), :id => 'title_header' %>
      </th>
      <th>Author</th> 
      <th class="<%= @date_header %>">
        <%= link_to 'Time posted', movies_path(:sort => 'release_date', :ratings => @selected_ratings), :id => 'release_date_header' %>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>

        <td>
          <%= movie.director %>
        </td>
        
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>Something else</h2>
  <%= text_field :movie, :title, :class => 'form-control' %>
